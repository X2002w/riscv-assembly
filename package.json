{
  "name": "riscv-assembler",
  "displayName": "RISC-V Assembler",
  "description": "A vscode extension for riacv assembly language suppert",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories":[
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:s",
    "onLanguage:S"
  ],


  "main": "./out/extension.js",

  "contributes":{

    "configuration": {
      "title": "assembly registers view",
      "properties": {
        "asmRegisterViewer.showHistory": {
          "type": "boolean",
          "default": true,
          "description": "是否在寄存器视图中显示历史记录"
        },
        "asmRegisterViewer.autoReset": {
          "type": "boolean",
          "default": true,
          "description": "是否在切换文件时自动重置寄存器视图"
        },
        "asmRegisterViewer.saveReset": {
          "type": "boolean",
          "default": false,
          "description": "是否在保存文件时自动重置寄存器视图"
        }
      }
    },

    "commands": [
      {
        "command": "asmRegisterViewer.showRegisters",
        "title": "Show RISC-V Registers"
      },
      {
        "command": "asmRegisterViewer.reset",
        "title": "Reset RISC-V Registers"
      },
      {
        "command": "asmRegisterViewer.copyValue",
        "title": "Copy Register Value"
      },
      {
        "command": "riscv-register.toggleShowChanged",
        "title": "Toggle Show Changed Only"
      }
    ],

    "languages":[
      {
        "id": "riscv-assembly",
        "aliases": [
          "RISC-V"
        ],
        "extensions": [
          ".S",
          ".s"
        ],
        "firstLint": "^#!/languages/riscv-assembly",
        "configuration": "./language-configuration.json"
      }
     
    ],

    "grammars": [
      {
        "language": "riscv-assembly",
        "scopeName": "source.riscv",
        "path": "./syntaxes/riscv-assembly.tmLanguage.json"
      }
    ],

    "menus": {
      "editor/context": [
        {
          "command": "asmRegisterViewer.showRegisters",
          "when": "editorLangId == riscv-assembly",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "asmRegisterViewer.reset",
          "when": "view == asmRegisterViewer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "asmRegisterViewer.copyValue",
          "when": "view == asmRegisterViewer",
          "group": "navigation"
        }
      ]
    },

    "views": {
      "explorer": [
        {
          "id": "asmRegisterViewer",
          "name": "RISC-V Registers"
        }
      ]
    }
      

  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
  
}