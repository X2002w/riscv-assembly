{
  "name": "riscv-assembler",
  "displayName": "RISC-V Assembler",
  "description": "A vscode extension for riacv assembly language suppert",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories":[
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],


  "main": "./out/extension.js",
  "contributes":{

    "languages":[
      {
        "id": "riscv-assembly",
        "aliases": [
          "RISC-V"
        ],
        "extensions": [
          ".S",
          ".s"
        ],
        "firstLint": "^#!/languages/riscv-assembly",
        "configuration": "./language-configuration.json"
      }
     
    ],

    "grammars": [
      {
        "language": "riscv-assembly",
        "scopeName": "source.riscv",
        "path": "./syntaxes/riscv-assembly.tmLanguage.json"
      }
    ]
      

  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
  
}